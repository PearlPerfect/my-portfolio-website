<!-- Technologies -->
<% if (technologies && technologies.length > 0) { %>
<section class="section">
    <div class="container">
        <h2 class="section-title">Technologies & Skills</h2>
        
        <div class="technologies-grid">
            <% const categories = ['backend', 'frontend', 'database', 'cloud', 'tool', 'ai', 'mobile']; %>
            <% categories.forEach(category => { %>
                <% const categoryTechs = technologies.filter(t => t.category === category); %>
                <% if (categoryTechs.length > 0) { %>
                    <div class="category-section">
                        <h3 class="category-title"><%= category.charAt(0).toUpperCase() + category.slice(1) %></h3>
                        <div class="tech-grid">
                            <% categoryTechs.forEach(tech => { %>
                                <div class="tech-item">
                                    <div class="tech-icon">
                                        <i class="fab fa-<%= tech.icon %>"></i>
                                    </div>
                                    <div class="tech-info">
                                        <div class="tech-name"><%= tech.name %></div>
                                        <div class="proficiency-bar">
                                            <div class="proficiency-level" style="width: <%= (tech.proficiency / 5) * 100 %>%"></div>
                                        </div>
                                        <div class="proficiency-text">
                                            <%= tech.proficiency %>/5 proficiency
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
            <% }) %>
        </div>
    </div>
</section>
<% } %>