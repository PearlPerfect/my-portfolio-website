<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle certificate links
    const certLinks = document.querySelectorAll('.cert-link');
    
    // You can add actual URLs here when you have them
    const certUrls = {
        'stanford-data-science': '#',
        'stanford-ai-ml': '#',
        'coursera-writing-science': '#',
        'ibm-python-datascience': '#',
        'hng-backend': '#',
        'alx-software-engineering': '#',
        'futurelabs-backend': '#',
        'udemy-python': '#',
        'africa-agility': '#',
        'women-techsters': '#'
    };
    
    certLinks.forEach(link => {
        const certId = link.getAttribute('data-cert');
        if (certUrls[certId]) {
            link.href = certUrls[certId];
        }
        
        // Show placeholder message if no URL
        link.addEventListener('click', function(e) {
            if (this.href === '#') {
                e.preventDefault();
                alert('Certificate link will be added when available. You can upload your certificates to Google Drive/Dropbox and update the links.');
            }
        });
    });
});
</script>