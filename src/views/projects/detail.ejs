<section class="section">
    <div class="container">
        <div class="project-detail">
            <!-- Project Header -->
            <div class="project-header-large">
                <div class="project-icon-large">
                    <% if (project.category === 'api') { %>
                        <i class="fas fa-code"></i>
                    <% } else if (project.category === 'web') { %>
                        <i class="fas fa-globe"></i>
                    <% } else if (project.category === 'mobile') { %>
                        <i class="fas fa-mobile-alt"></i>
                    <% } else if (project.category === 'ai') { %>
                        <i class="fas fa-brain"></i>
                    <% } else if (project.category === 'microservice') { %>
                        <i class="fas fa-server"></i>
                    <% } else if (project.category === 'authentication') { %>
                        <i class="fas fa-shield-alt"></i>
                    <% } else if (project.category === 'payment') { %>
                        <i class="fas fa-credit-card"></i>
                    <% } else if (project.category === 'tool') { %>
                        <i class="fas fa-tools"></i>
                    <% } else if (project.category === 'database') { %>
                        <i class="fas fa-database"></i>
                    <% } else { %>
                        <i class="fas fa-project-diagram"></i>
                    <% } %>
                </div>
                <div class="project-header-content">
                    <div class="project-badges-large">
                        <span class="project-badge-large status-<%= project.status %>">
                            <i class="fas fa-circle"></i> <%= project.status %>
                        </span>
                        <span class="project-badge-large type-<%= project.type %>">
                            <i class="fas fa-tag"></i> <%= project.type %>
                        </span>
                        <% if (project.stage) { %>
                            <span class="project-badge-large stage-<%= project.stage %>">
                                <i class="fas fa-step-forward"></i> Stage <%= project.stage %>
                            </span>
                        <% } %>
                    </div>
                    <h1 class="project-title-large"><%= project.title %></h1>
                    <p class="project-description-large"><%= project.description %></p>
                    
                    <div class="project-meta-large">
                        <span class="meta-item-large">
                            <i class="fas fa-calendar"></i>
                            Created: <%= project.createdAt.toLocaleDateString() %>
                        </span>
                        <span class="meta-item-large">
                            <i class="fas fa-tag"></i>
                            Category: <%= project.category %>
                        </span>
                        <span class="meta-item-large">
                            <i class="fas fa-layer-group"></i>
                            Complexity: <%= project.complexity %>
                        </span>
                    </div>
                    
                    <div class="project-actions-large">
                        <% if (project.githubUrl) { %>
                            <a href="<%= project.githubUrl %>" target="_blank" class="btn btn-primary">
                                <i class="fab fa-github"></i> View Code
                            </a>
                        <% } %>
                        <% if (project.liveDemoUrl) { %>
                            <a href="<%= project.liveDemoUrl %>" class="btn btn-secondary">
                                <i class="fas fa-external-link-alt"></i> Live Demo
                            </a>
                        <% } %>
                        <% if (project.documentationUrl) { %>
                            <a href="<%= project.documentationUrl %>" class="btn btn-secondary">
                                <i class="fas fa-book"></i> Documentation
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
            
            <!-- Project Details -->
            <div class="project-content">
                <!-- Long Description -->
                <div class="content-section">
                    <h2>Project Overview</h2>
                    <p><%= project.longDescription %></p>
                </div>
                
                <!-- Features -->
                <% if (project.features && project.features.length > 0) { %>
                    <div class="content-section">
                        <h2>Features</h2>
                        <ul class="features-list">
                            <% project.features.forEach(feature => { %>
                                <li>
                                    <i class="fas fa-check-circle"></i>
                                    <%= feature %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                
                <!-- Technologies -->
                <% if (project.technologies && project.technologies.length > 0) { %>
                    <div class="content-section">
                        <h2>Technologies Used</h2>
                        <div class="technologies-list">
                            <% project.technologies.forEach(tech => { %>
                                <span class="tech-tag-large"><%= tech %></span>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
                
                <!-- API Endpoints -->
                <% if (project.endpoints && project.endpoints.length > 0) { %>
                    <div class="content-section">
                        <h2>API Endpoints</h2>
                        <div class="endpoints-list">
                            <% project.endpoints.forEach(endpoint => { %>
                                <div class="endpoint-item">
                                    <div class="endpoint-method <%= endpoint.method.toLowerCase() %>">
                                        <%= endpoint.method %>
                                    </div>
                                    <div class="endpoint-path"><%= endpoint.path %></div>
                                    <div class="endpoint-description"><%= endpoint.description %></div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                <% } %>
                
                <!-- Highlights, Challenges, Lessons -->
                <% if (project.highlights && project.highlights.length > 0) { %>
                    <div class="content-section">
                        <h2>Highlights</h2>
                        <ul class="highlights-list">
                            <% project.highlights.forEach(highlight => { %>
                                <li>
                                    <i class="fas fa-star"></i>
                                    <%= highlight %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                
                <% if (project.challenges && project.challenges.length > 0) { %>
                    <div class="content-section">
                        <h2>Challenges</h2>
                        <ul class="challenges-list">
                            <% project.challenges.forEach(challenge => { %>
                                <li>
                                    <i class="fas fa-exclamation-triangle"></i>
                                    <%= challenge %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
                
                <% if (project.lessonsLearned && project.lessonsLearned.length > 0) { %>
                    <div class="content-section">
                        <h2>Lessons Learned</h2>
                        <ul class="lessons-list">
                            <% project.lessonsLearned.forEach(lesson => { %>
                                <li>
                                    <i class="fas fa-graduation-cap"></i>
                                    <%= lesson %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                <% } %>
            </div>
            
            <!-- Related Projects -->
            <% if (relatedProjects && relatedProjects.length > 0) { %>
                <div class="related-projects">
                    <h2>Related Projects</h2>
                    <div class="related-projects-grid">
                        <% relatedProjects.forEach(related => { %>
                            <div class="related-project-card">
                                <div class="related-project-header">
                                    <div class="related-project-icon">
                                        <% if (related.category === 'api') { %>
                                            <i class="fas fa-code"></i>
                                        <% } else if (related.category === 'web') { %>
                                            <i class="fas fa-globe"></i>
                                        <% } else if (related.category === 'mobile') { %>
                                            <i class="fas fa-mobile-alt"></i>
                                        <% } else if (related.category === 'ai') { %>
                                            <i class="fas fa-brain"></i>
                                        <% } else if (related.category === 'microservice') { %>
                                            <i class="fas fa-server"></i>
                                        <% } else if (related.category === 'authentication') { %>
                                            <i class="fas fa-shield-alt"></i>
                                        <% } else if (related.category === 'payment') { %>
                                            <i class="fas fa-credit-card"></i>
                                        <% } else if (related.category === 'tool') { %>
                                            <i class="fas fa-tools"></i>
                                        <% } else if (related.category === 'database') { %>
                                            <i class="fas fa-database"></i>
                                        <% } else { %>
                                            <i class="fas fa-project-diagram"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="related-project-body">
                                    <h3 class="related-project-title">
                                        <a href="/projects/<%= related.slug %>"><%= related.title %></a>
                                    </h3>
                                    <p class="related-project-description"><%= related.description %></p>
                                    <div class="related-project-actions">
                                        <a href="/projects/<%= related.slug %>" class="btn btn-sm">View Details</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</section>

<style>
.project-detail {
    max-width: 1200px;
    margin: 0 auto;
}

/* Project Header */
.project-header-large {
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-color) 100%);
    border-radius: var(--radius-xl);
    overflow: hidden;
    margin-bottom: 3rem;
    box-shadow: var(--shadow-lg);
    padding: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.project-icon-large {
    font-size: 4rem;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
}

.project-header-content {
    width: 100%;
}

.project-badges-large {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
    flex-wrap: wrap;
}

.project-badge-large {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    border-radius: var(--radius-full);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
}

.project-badge-large i {
    font-size: 0.8rem;
}

.project-badge-large.status-completed {
    background-color: #10b981;
    color: white;
}

.project-badge-large.status-in-progress {
    background-color: #f59e0b;
    color: white;
}

.project-badge-large.status-planned {
    background-color: #6b7280;
    color: white;
}

.project-badge-large.type-hng {
    background-color: #3b82f6;
    color: white;
}

.project-badge-large.type-personal {
    background-color: #8b5cf6;
    color: white;
}

.project-badge-large.type-client {
    background-color: #ef4444;
    color: white;
}

.project-badge-large.type-open-source {
    background-color: #f59e0b;
    color: white;
}

.project-badge-large.stage-0 { background-color: #3b82f6; color: white; }
.project-badge-large.stage-1 { background-color: #10b981; color: white; }
.project-badge-large.stage-2 { background-color: #8b5cf6; color: white; }
.project-badge-large.stage-3 { background-color: #f59e0b; color: white; }
.project-badge-large.stage-4 { background-color: #ef4444; color: white; }
.project-badge-large.stage-5 { background-color: #6366f1; color: white; }
.project-badge-large.stage-6 { background-color: #14b8a6; color: white; }
.project-badge-large.stage-7 { background-color: #f97316; color: white; }
.project-badge-large.stage-8 { background-color: #8b5cf6; color: white; }
.project-badge-large.stage-9 { background-color: #3b82f6; color: white; }

.project-title-large {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
}

.project-description-large {
    font-size: 1.25rem;
    color: var(--text-light);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
}

.project-meta-large {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
}

.meta-item-large {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-light);
    font-size: 0.95rem;
}

.meta-item-large i {
    color: var(--primary-color);
}

.project-actions-large {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

/* Project Content */
.project-content {
    background-color: var(--card-bg);
    border-radius: var(--radius-lg);
    padding: 2rem;
    margin-bottom: 3rem;
    box-shadow: var(--shadow);
}

.content-section {
    margin-bottom: 2.5rem;
}

.content-section h2 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--border-color);
}

/* Features List */
.features-list {
    list-style: none;
    padding: 0;
}

.features-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.features-list li:last-child {
    border-bottom: none;
}

.features-list i {
    color: #10b981;
    margin-top: 0.25rem;
}

/* Technologies */
.technologies-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
}

.tech-tag-large {
    background-color: var(--bg-tertiary);
    color: var(--text-color);
    padding: 0.75rem 1.25rem;
    border-radius: var(--radius-full);
    font-size: 0.95rem;
    font-weight: 500;
    transition: all 0.2s ease;
}

.tech-tag-large:hover {
    background-color: var(--primary-color);
    color: white;
    transform: translateY(-2px);
}

/* API Endpoints */
.endpoints-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.endpoint-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background-color: var(--bg-tertiary);
    border-radius: var(--radius-md);
    border-left: 4px solid var(--primary-color);
}

.endpoint-method {
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    font-weight: 600;
    font-size: 0.875rem;
    min-width: 70px;
    text-align: center;
}

.endpoint-method.get {
    background-color: #10b981;
    color: white;
}

.endpoint-method.post {
    background-color: #f59e0b;
    color: white;
}

.endpoint-method.put {
    background-color: #3b82f6;
    color: white;
}

.endpoint-method.delete {
    background-color: #ef4444;
    color: white;
}

.endpoint-method.patch {
    background-color: #8b5cf6;
    color: white;
}

.endpoint-path {
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 1rem;
    color: var(--text-color);
    flex: 1;
}

.endpoint-description {
    color: var(--text-light);
    font-size: 0.95rem;
}

/* Lists */
.highlights-list,
.challenges-list,
.lessons-list {
    list-style: none;
    padding: 0;
}

.highlights-list li,
.challenges-list li,
.lessons-list li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: flex-start;
    gap: 1rem;
}

.highlights-list li:last-child,
.challenges-list li:last-child,
.lessons-list li:last-child {
    border-bottom: none;
}

.highlights-list i {
    color: #fbbf24;
}

.challenges-list i {
    color: #ef4444;
}

.lessons-list i {
    color: #8b5cf6;
}

/* Related Projects */
.related-projects {
    margin-top: 3rem;
}

.related-projects h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
    color: var(--text-color);
}

.related-projects-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

@media (min-width: 768px) {
    .related-projects-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }
}

.related-project-card {
    background-color: var(--card-bg);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: transform 0.3s ease;
}

.related-project-card:hover {
    transform: translateY(-5px);
}

.related-project-header {
    height: 100px;
    background: linear-gradient(135deg, var(--bg-tertiary) 0%, var(--border-color) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
}

.related-project-icon {
    font-size: 2rem;
    color: var(--primary-color);
    opacity: 0.8;
}

.related-project-body {
    padding: 1.5rem;
}

.related-project-title {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
}

.related-project-title a {
    color: var(--text-color);
    text-decoration: none;
}

.related-project-title a:hover {
    color: var(--primary-color);
}

.related-project-description {
    color: var(--text-light);
    font-size: 0.95rem;
    margin-bottom: 1rem;
    line-height: 1.5;
}

.related-project-actions {
    display: flex;
    justify-content: flex-end;
}

/* Responsive Design */
@media (max-width: 768px) {
    .project-header-large {
        margin-bottom: 2rem;
        padding: 1.5rem;
    }
    
    .project-icon-large {
        font-size: 3rem;
    }
    
    .project-title-large {
        font-size: 2rem;
    }
    
    .project-description-large {
        font-size: 1.125rem;
    }
    
    .project-meta-large {
        gap: 1rem;
    }
    
    .project-actions-large {
        gap: 0.75rem;
    }
    
    .content-section {
        margin-bottom: 2rem;
    }
    
    .endpoint-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
    
    .endpoint-path {
        width: 100%;
        overflow-x: auto;
    }
}
</style>